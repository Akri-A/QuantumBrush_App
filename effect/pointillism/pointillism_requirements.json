{
  "name": "Quantum Pointillism",
  "id": "pointillism",
  "author": "Khrystian Koci & Benjamin Thomas",
  "version": "0.1.0",
  "description": "Pointillism brush with Ising-model quantum correlations between dots.",
  "dependencies": {
    "numpy": ">=2.1.0",
    "qiskit": ">=1.0.0",
    "scipy": ">=1.10.0"
  },
  "user_input": {
    "Dot Count": {
      "type": "int",
      "min": 10,
      "max": 100,
      "default": 30
    },
    "Coupling Strength": {
      "type": "float",
      "min": -1.0,
      "max": 1.0,
      "default": 0.5
    },
    "Evolution Time": {
      "type": "float",
      "min": 0.1,
      "max": 10.0,
      "default": 2.0
    },
    "Target Color": {
      "type": "color",
      "default": "#FF5733"
    },
    "Dot Size": {
      "type": "int",
      "min": 1,
      "max": 8,
      "default": 8
    },
    "Show Interactions": {
      "type": "bool",
      "default": false
    }
  },
  "stroke_input": {
    "image_rgba": "array",
    "path": "array"
  },
  "flags": {
    "smooth_path": true
  }
}
