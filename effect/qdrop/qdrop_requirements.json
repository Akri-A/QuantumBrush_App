{
    "name": "Quantum Drops",
    "id": "qdrop", 
    "author": "Joao",
    "version": "1.0.0",
    "description": "This applies a change of hue and luminosity to each section of the brush. All the parts are entangled, so the color of one part will affect the color of the others. The effect is similar to a drop of paint, where the colors mix together.",
    "dependencies": {
        "numpy": ">=2.1.0",
        "colorsys": ""
    },
    "user_input": {
        "Number of Drops": {
            "type": "int",
            "min": 0,
            "max": 10,
            "default": 5 
        },
        "Radius": {
            "type": "int",
            "min": 0,
            "max": 100,
            "default": 20 
        },
        "Strength": {
            "type": "float",
            "min": 0,
            "max": 1,
            "default": 1 
        },
        "Target Color": {
            "type": "color",
            "default": "#FF0000"
        }
    },
    "stroke_input": {
        "image_rgba": "array",
        "path": "array",
        "clicks": "array"
    },
    "flags": {
        "smooth_path": true
    }
}